               </div>
           {%- when 'button' -%}
               <div class="hero__button" {{ block.shopify_attributes }}>
               {%- if block.settings.button_label != blank -%}
                   <a{% if block.settings.button_link != blank %} href="{{ block.settings.button_link}}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"{% if block.settings.button_link == blank %} aria-disabled="true"{% endif %}>{{ block.settings.button_label | escape }}</a>
               {%- endif -%}
               </div>
           {%- endcase -%}
       {%- endfor -%}
       </div>
   </div>
</div>
 
 
